@using Microsoft.AspNetCore.Identity;

@inject SignInManager<User> SignInUser;
@inject UserManager<User> UserManager;


<ul class="navbar-nav">
    @if (SignInUser.IsSignedIn(User))
    { 
    <li class="nav-item">
        <a class="nav-link" href="#">Xin chào - @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
    </li>
    }
    else 
    {
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
    </li>
    }
</ul>