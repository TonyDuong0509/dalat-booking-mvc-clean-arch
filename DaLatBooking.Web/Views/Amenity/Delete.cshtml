@model AmenityVM;

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white p-2">Xoá dịch vụ tiện nghi</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Amenity.Id" hidden />
            <div class="p-3">
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Amenity.VillaId" disabled asp-items="@Model.VillaList"
                            class="form-select border shadow">
                        <option disabled>--Chọn loại phòng--</option>
                    </select>
                    <label asp-for="Amenity.VillaId" class="ms-2">Loại phòng</label>
                    <span asp-validation-for="Amenity.VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Amenity.Name" readonly class="form-control border shadow" />
                    <label asp-for="Amenity.Name" class="ms-2">Thông tin dịch vụ tiện nghi</label>
                    <span asp-validation-for="Amenity.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Amenity.Description" readonly class="form-control border shadow"></textarea>
                    <label asp-for="Amenity.Description" class="ms-2">Chi tiết đặc biệt</label>
                    <span asp-validation-for="Amenity.Description" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">    
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i>Xoá
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle">Huỷ</i>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}